@{
    ViewBag.Title = "Home Page";
}

<style>
    img {
          height: 200px;
  background-position: center center;
  background-size: cover;
        display: block;
        margin-left: auto;
        margin-right: auto;
        width:100%;
    }
     
</style>
<div class="container">
    <br>
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
            <li data-target="#myCarousel" data-slide-to="3"></li>
            <li data-target="#myCarousel" data-slide-to="4"></li>
            <li data-target="#myCarousel" data-slide-to="5"></li>
            <li data-target="#myCarousel" data-slide-to="6"></li>
            <li data-target="#myCarousel" data-slide-to="7"></li>
            <li data-target="#myCarousel" data-slide-to="8"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">

            <div class="item active">
                <img src="~/Images/Carousel/Bangkok.jpg" alt="Bangkok">
                <div class="carousel-caption" align="right">
                    <h3>Cities</h3>
                    <p>Beautiful Bangkok, Thailand.</p>
                </div>
            </div>

            <div class="item">
                <img src="~/Images/Carousel/Berlincity.jpg" alt="Berlin">
                <div class="carousel-caption" align="right">
                    <h3>Cities</h3>
                    <p>Beautiful Berlin, Deutch.</p>
                </div>
            </div>

            <div class="item">
                <img src="~/Images/Carousel/Lviv.jpg" alt="Lviv">
                <div class="carousel-caption" align="right">
                    <h3>Cities</h3>
                    <p>Beautiful Lviv, Ukraine.</p>
                </div>
            </div>

            <div class="item">
                <img src="~/Images/Carousel/NewYorkcity.jpg" alt="New York">
                <div class="carousel-caption" align="right">
                    <h3>Cities</h3>
                    <p>Beautiful New York, The USA.</p>
                </div>
            </div>

            <div class="item">
                <img src="~/Images/Carousel/Sydney.jpg" alt="Sydney">
                <div class="carousel-caption" align="right">
                    <h3>Cities</h3>
                    <p>Beautiful Sydney, Australia.</p>
                </div>
            </div>

            <div class="item">
                <img src="~/Images/Carousel/SanFrancisco.jpg" alt="San Francisco">
                <div class="carousel-caption" align="right">
                    <h3>Cities</h3>
                    <p>Beautiful San Francisco, The USA.</p>
                </div>
            </div>

            <div class="item">
                <img src="~/Images/Carousel/Rio.jpg" alt="Rio de Janeiro">
                <div class="carousel-caption" align="right">
                    <h3>Cities</h3>
                    <p>Beautiful Rio de Janeiro, Brazil.</p>
                </div>
            </div>

            <div class="item">
                <img src="~/Images/Carousel/NewDelhi.jpg" alt="New Delhi">
                <div class="carousel-caption" align="right">
                    <h3>Cities</h3>
                    <p>Beautiful New Delhi, India.</p>
                </div>
            </div>

            <div class="item">
                <img src="~/Images/Carousel/London.jpg" alt="London">
                <div class="carousel-caption" align="right">
                    <h3>Cities</h3>
                    <p>Beautiful London, England.</p>
                </div>
            </div>

        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>