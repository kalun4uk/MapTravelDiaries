@model IEnumerable<MapProject12.Models.EditModel>

@{
    ViewBag.Title = "ShowVisits";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ShowVisits</h2>

<style>
    #mtable {
    font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
    font-size: 150%;
    border-collapse: collapse;
    width: 100%;
}
 
    #mtabletr:nth-child(even){background-color: #f2f2f2;}

    #mtable tr:hover {background-color: #ddd;} 
    
    #mtable th {
    padding-top: 12px;
    padding-bottom: 12px;
    text-align: left;
    background-color: #b3ffe0;
    color: black;
}   
    a:active {
    background-color: #b3ffe0;
}

</style>

<table class="table" id="mtable">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Comment)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CityName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Latitude)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Longitude)
        </th>
        <th>
            <span>What to do??</span>
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Comment)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CityName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Latitude)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Longitude)
        </td>
        <td id="hyper">
            @Html.ActionLink("Wiki", "WikiSearch", new { City = item.CityName }) |
            @Html.ActionLink("Edit", "EditTravel", new {id = item.Id}) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
            
        </td>
    </tr>
}

</table>
